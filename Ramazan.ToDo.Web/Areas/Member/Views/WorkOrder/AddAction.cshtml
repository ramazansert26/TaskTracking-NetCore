@model ActionAddDto
@{
    ViewData["Title"] = "AddAction";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

    <div class="card text-white bg-info my-3 ">
        <div class="card-header"><h4>@Model.Work.Name</h4></div>
        <div class="card-body">
            <p class="card-title">Öncelik Durumu: @Model.Work.Priority.Description</p>
            <p class="card-text">@Model.Work.Description.</p>
        </div>
    </div>


    <form method="post" asp-action="AddAction">
        <input type="hidden" asp-for="@Model.WorkId" />
        <div class="form-group">
            <label>Tanım</label>
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
            <input asp-for="@Model.Description" class="form-control" />
        </div>
        <div class="form-group">
            <label>Harcanan Süre(Saat)</label>
            <span asp-validation-for="@Model.TimeSpent" class="text-danger"></span>
            <input asp-for="@Model.TimeSpent" class="form-control" />
        </div>
        <div class="form-group">
            <label>Detay</label>
            <span asp-validation-for="@Model.Detail" class="text-danger"></span>
            <textarea asp-for="@Model.Detail" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <a asp-action="Index" class="btn btn-danger"><i class="fas fa-ban mr-2"></i>İptal</a>
            <button type="submit" class="btn btn-primary"><i class="fas fa-check mr-2"></i>Kaydet</button>
        </div>
    </form>

@section JavaScript{
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}
