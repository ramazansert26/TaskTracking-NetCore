@model List<PriorityListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4>Öncelik Listesi</h4>

@if (Model.Count > 0)
{
    <a asp-action="AddPriority" asp-controller="Priority" class="btn btn-sm btn-info my-2"><i class="fas fa-plus mr-2"></i> Yeni Öncelik </a>
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>Tanım</th>
                <th>İşlem</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="UpdatePriority" asp-controller="Priority" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit mr-2"></i> Düzenle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    
<div class="text-center mt-4">
    <p class="lead">Sistemde kayıtlı öncelik durumu bulunamadı.</p>
    <a asp-action="AddPriority" asp-controller="Priority" class="btn btn-sm btn-info my-2"><i class="fas fa-plus mr-2"></i> Yeni Öncelik</a>
</div>
}
