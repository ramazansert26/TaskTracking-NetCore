@model WorkUpdateDto
@{
    ViewData["Title"] = "UpdateWork";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="UpdateWork" method="post" class="w-75 mx-auto p-3">
    <input hidden asp-for="@Model.Id" />
    <div class="form-group">
        <label>Ad</label>
        <span class="text-danger" asp-validation-for="@Model.Name"></span>
        <input type="text" class="form-control" asp-for="@Model.Name">
    </div>

    <div class="form-group">
        <label>Açıklama:</label>
        <span class="text-danger" asp-validation-for="@Model.Description"></span>
        <textarea class="form-control" asp-for="@Model.Description"></textarea>
    </div>

    <div class="form-group">
        <label>Aciliyet Durumu Seçiniz:</label>
        <span class="text-danger" asp-validation-for="@Model.PriorityId"></span>
        <select class="form-control" asp-for="@Model.PriorityId" asp-items="ViewBag.Priorities">
            <option hidden value="-1">Seçiniz</option>
        </select>
    </div>


    <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-check mr-2"></i> Kaydet</button>
</form>

@section JavaScript{
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}
