@model UserAssignListDto
@{
    ViewData["Title"] = "AssignUserConfirm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    <div class="row mt-2">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-center lead pt-2">Görev Bilgileri</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.Work.Name</h5>
                    <p class="card-text">@Model.Work.Description</p>
                    <p class="card-text"><strong>Öncelik Durumu: </strong><span class="badge badge-primary">@Model.Work.Priority.Description</span></p>
                    <p class="card-text"><small>@Model.Work.CreateDate.ToString("D")</small></p>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header">
                    <h4 class="text-center lead pt-2">Personel Bilgileri</h4>
                </div>
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="~/img/@Model.AppUser.Picture" class="card-img img-thumbnail shadow" style="height:10rem!important" alt="@Model.AppUser.Name">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@Model.AppUser.Name @Model.AppUser.SurName</h5>
                                <p class="card-text">
                                    <getWorkByAppUserId app-user-id="@Model.AppUser.Id"></getWorkByAppUserId>
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">@Model.AppUser.Email</small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <div class="col-md-12">
            <form class="lead text-center mt-2" method="post">
                <p> Yukarıdaki göreve ilgili personel atanacaktır. Bu işlemi gerçekleştirmek istediğinizden emin misiniz?</p>
                <input type="hidden" name="UserId"  value="@Model.AppUser.Id"/>
                <input type="hidden" name="WorkId"  value="@Model.Work.Id"/>

                <div class="form-group text-center">
                    <a asp-action="AssignUser" asp-route-id="@Model.Work.Id" class="btn btn-danger"><i class="fas fa-ban mr-2"></i> İptal</a>
                    <button type="submit" class="btn btn-primary" asp-action="AssignUser"><i class="fas fa-user-plus mr-2"></i> Görevlendir</button>
                </div>
            </form>
        </div>

    </div>