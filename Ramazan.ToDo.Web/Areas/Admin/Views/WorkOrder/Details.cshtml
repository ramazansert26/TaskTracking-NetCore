@model WorkListAllDto
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Actions.Count > 0)
{
    <a asp-action="ExportExcel" asp-route-id="@Model.Id" target="_blank" class="btn btn-outline-info btn-sm my-2 mr-2"><i class="fas fa-table mr-2"></i> Excel</a>
    <a asp-action="ExportPdf" asp-route-id="@Model.Id" target="_blank" class="btn btn-outline-info btn-sm my-2 mr-2"><i class="fas fa-file-pdf mr-2"></i> Pdf</a>
    <table class="table table-hover table-sm table-bordered">
        <tr>
            <th colspan="4" class="text-center">@Model.AppUser.Name @Model.AppUser.SurName Personelin @Model.Name görevi üzerinde yaptığı çalışmalar</th>
        </tr>
        <tr>
            <th>Tanım</th>
            <th>Detay</th>
            <th>Harcanan Süre (Saat)</th>
            <th>Aksiyon Tarihi</th>
        </tr>
        @foreach (var action in Model.Actions)
        {
            <tr>
                <td>@action.Description</td>
                <td>@action.Detail</td>
                <td>@action.TimeSpent</td>
                <td>@action.CreateDate.ToString("D")</td>
            </tr>
        }
    </table>
}
else
{
    <div class="border border-dark mt-2 text-center">
        @Model.AppUser.Name @Model.AppUser.SurName personel şuan da @Model.Name görevi üzerinde henüz aksiyon almamış.
    </div>
}
