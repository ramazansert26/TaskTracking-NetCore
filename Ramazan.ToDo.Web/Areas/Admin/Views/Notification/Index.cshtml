@model List<NotificationListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count > 0)
{
    @foreach (var notification in Model)
    {
        <div class="alert alert-info p-3 my-2">
            <form method="post" asp-action="Index" asp-route-id="@notification.Id" class="my-1">
                <input type="hidden" name="id" value="@notification.Id" />
                <p class="lead">
                    @notification.Description
                    <button type="submit" class="btn btn-light btn sm float-right mr-2"><i class="fas fa-check"></i>Okundu</button>
                    @if (notification.Action != null)
                    {
                        <a asp-area="@notification.Area" asp-controller="@notification.Controller" asp-action="@notification.Action" asp-route-id="@notification.DataId" class="btn btn-dark btn sm float-right"><i class="far fa-eye mr-2"></i>Görüntüle</a>
                    }
                </p>
            </form>
        </div>
    }
}
else
{
    <div class="alert alert-light p-3 my-2">
            <p class="lead font-italic">
                Okunmamış bildiriminiz bulunmamaktadır
            </p>
    </div>

}
