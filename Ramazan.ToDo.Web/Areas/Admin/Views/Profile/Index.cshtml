@model AppUserListDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<form asp-action="Index" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label>Ad </label>
        <span asp-for="@Model.Name" class="text-danger"></span>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.SurName"></label>
        <span asp-for="@Model.SurName" class="text-danger"></span>
        <input asp-for="@Model.SurName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <span asp-for="@Model.Email" class="text-danger"></span>
        <input asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="form-group mt-2">
        <div class="row">
            <div class="col-md-4">
                <div>
                    <h5 class="text-center">Resminiz:</h5>
                    <img src="~/img/@Model.Picture" style="height:10rem!important;" alt="@Model.Name" class="w-100" />
                </div>

            </div>
            <div class="col-md-2"></div>
            <div class="col-md-4">
                <div id="picturePreviewDiv" style="display:none!important;">
                    <h4 class="text-center">Seçtiğiniz Resim:</h4>
                    <img id="picturePreview" src="" style="height:10rem!important;" class="w-100" />
                </div>
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-12">
                <label>Resim Seç:</label>
                <input type="file" class="form-control-file" name="picture" id="Picture" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-info btn-sm mt-2">
        <i class="fas fa-check mr-2"></i> Kaydet
    </button>
</form>
@section JavaScript{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#Picture").change(function (e) {
                $("#picturePreviewDiv").show();
                $("#picturePreview").attr('src', URL.createObjectURL(e.target.files[0]));
            });
        });
    </script>
}