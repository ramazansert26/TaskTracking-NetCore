@model AppUserAddDto
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}

    
    <form class="mt-4 w-75 mx-auto p-3 shadow" asp-action="SignUp" method="post">
        <h4 class="text-center font-italic">Kayıt Ol</h4>
        <div class="form-group">
            <label>Ad</label>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
            <input asp-for="@Model.Name" class="form-control">
        </div>
        <div class="form-group">
            <label>Soyad</label>
            <span asp-validation-for="@Model.Surname" class="text-danger"></span>
            <input asp-for="@Model.Surname" class="form-control">
        </div>
        <div class="form-group">
            <label>Email</label>
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
            <input asp-for="@Model.Email" class="form-control">
        </div>
        <div class="form-group">
            <label>Parola</label>
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
            <input type="password" asp-for="@Model.Password" class="form-control">
        </div>
        <div class="form-group">
            <label>Parola Tekrar</label>
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            <input type="password" asp-for="@Model.ConfirmPassword" class="form-control">
        </div>
        <div class="form-group">
            <label>Kullanıcı Adı</label>
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            <input asp-for="@Model.UserName" class="form-control">
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <a asp-action="Index" class="btn btn-warning">Vazgeç</a>
        <button type="submit" class="btn btn-info">Kayıt Ol</button>
    </form>

