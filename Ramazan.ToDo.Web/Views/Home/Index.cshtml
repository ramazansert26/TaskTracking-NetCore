@model AppUserSignInDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}
<form asp-action="SignIn" class="mt-5 w-50 mx-auto p-4 shadow" method="post">
    <div class="form-group">
        <label>Kullanıcı Adı</label>
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        <input asp-for="@Model.UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Şifre</label>
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
        <input type="password" asp-for="@Model.Password" class="form-control" />
    </div>
    <a asp-action="SignUp" class="btn btn-warning btn-sm">Kayıt Ol</a>
    <button type="submit" class="btn btn-info btn-sm">Giriş Yap</button>

</form>

